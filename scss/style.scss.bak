body {
    margin: opx;
}
header {
    height: 4rem;
    text-align: center;
    box-shadow: 0 0 0.5rem rgb(0, 0, 0);
    position: relative;
}

.header_logo {
    font-family: "Shrikhand", sans-serif;
    font-size: 2rem;
    padding-top: 0.5rem;
}

main {
    font-family: "Roboto", sans-serif;
}

.localite {
    height: 3.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1.2rem;
    background-color: rgba(234, 234, 234, 255);
    text-align: center;
    font-size: 1.2rem;
    padding: 0.3rem;
    padding-top: 1rem;
}

.explorateur {
    height: 23rem;
    padding-top: 2.6rem;
    text-align: center;
    background-color: #f6f6f6;
    & h2 {
        font-weight: bold;
        font-size: 1.7rem;
    }
    & p {
        font-size: 1.1rem;
        color: #5c5857;
        margin-top: 1.5rem;
    }
}
.explorateur_btn {
    width: 75%;
    color: white;
    font-size: 1.2rem;
    padding: 1rem;
    padding-left: 1.7rem;
    padding-right: 1.7rem;
    margin-top: 3rem;
    border-radius: 3rem;
    border: none;
    box-shadow: 2px 2px 2px 1.5px grey;
    background-image: linear-gradient(#ff79da,#9356dc);
}

.explorateur_btn:hover {
    transform: scale(1.03);
    cursor: pointer;
}

.tutoriel {
    height: 30rem;
    padding-top: 3rem;
    
    
    & h2 {
        font-weight: bold;
        font-size: 1.7rem;
        padding-left: 2rem;
        padding-bottom: 1.8rem;
}
}

.tutoriel_text {
  text-align: center;
}

.tuto li {
    display: flex;
    width: 92%;
    margin-left: 6%;
    padding: 1.7rem;
    padding-left: 2rem;
    margin-bottom: 7rem;
    font-size: 1.2rem;
    background-color: #eeeded;
    margin-bottom: 10px;
    border-radius: 1.5rem;  
}

.bb {
    display: flex;
    position: absolute;
    gap: 1rem;
    
    & bb3 {
        background-color: #f5edff;
    }
}


.tuto .number {
    background-color: #9356dc;
    width: 1.8rem;
    height: 1.8rem;
    font-size: 1rem;
    color: white;
    border-radius: 100%;
    text-align: center;
    position: relative;
    left: -3rem;
}

#restaurants {
    width: 100%;
    height: 90rem;
    background-color: #f6f6f6;
    padding-top: 2rem;
    margin-top: 0px;
    
    

    & h2 {
        font-weight: bold;
        font-size: 1.7rem;
        padding-left: 1.8rem;
        margin-top: 1.8rem;
        margin-bottom: 1.8rem;
     
}
}

.restaurants_container {
    height: 92%;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.restaurants_contenu {
    position: relative;
}

.restaurants_contenu p {
    color: #606060;
    font-size: 1.3rem;
}

.far {
    position: absolute;
    bottom: 2rem;
    right: 2.3rem;
}

.fas {
    position: absolute;
    bottom: 2rem;
    right: 2.3rem;
    color: transparent;
    background-image: linear-gradient(#ff79da,#9356dc);
    background-clip: text;
}

.restaurants_cards {
    width: 92%;
    height: 23%;
    background-color: white;
    border-radius: 2.5rem;
    margin-bottom: 1.5rem; 
    position: relative;
}

.restaurants_cards_img {
    height: 73%;
    width: 100%;
    background-size: cover;
    border-radius: 20px 20px 0 0;
    object-fit: cover;
}

.restaurants_cards_footer {
    display: flex;
    justify-content: space-between;
    padding-left: 1.8rem;
    padding-right: 1.8rem;
    padding-bottom: 1.2rem;
    padding-top: 0.6rem;
}

.restaurants_contenu h3 {
    font-size: 1.4rem;
    font-weight: bold;
    
    color: black;
}

.restaurants_mention {
    align-items: center;
    text-align: center;
    font-size: 1.4rem;
    font-weight: 700;
    width: 100px;
    height: 10%;
    padding-top: 0.3rem;
    background-color: #99e2d0;
    color: #008766;
    position: absolute;
    top: 0.8rem;
    right: 0.8rem;
}

.cardmention {
    text-decoration: none;
}


/* FOOTER */

.footer {
    width: 100%;
    height: 16rem;
    color: white;
    background-color: #353535;
    padding: 1.2rem;
    padding-left: 1.4rem;
    font-family: "Roboto";
}

footer h4 {
    font-family: "Shrikhand", sans-serif;
    font-size: 1.4rem;
    margin-bottom: 1.2rem;
}

.cc {
    font-size: 1.2rem;
    gap: 4rem;
}


.decorationnone {
    text-decoration: none;
    color: white;
    margin-bottom: 1rem;
    gap: 1rem;
}

 